@model Schedule

<h2>Register</h2>

<form method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="shift">Shift:</label>
        <input type="text" id="shift" name="shift" class="form-control" />
        @Html.ValidationMessage("shift")
    </div>

    <div class="form-group">
        <label for="startDate">Start Date:</label>
        <input type="text" id="startDate" name="startDate" class="form-control" />
        @Html.ValidationMessage("startDate")
    </div>

    <div class="form-group">
        <label for="endDate">End Date:</label>
        <input type="text" id="endDate" name="endDate" class="form-control" />
        @Html.ValidationMessage("endDate")
    </div>

    <div class="form-group">
        <label for="startHour">Start Hour:</label>
        <input type="password" id="startHour" name="startHour" class="form-control" />
        @Html.ValidationMessage("password")
    </div>

    <div class="form-group">
        <label for="endHour">End Hour:</label>
        <input type="text" id="endHour" name="endHour" class="form-control" />
        @Html.ValidationMessage("endHour")
    </div>

    <div class="form-group">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" class="form-control" />
        @Html.ValidationMessage("username")
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>
